<body>

    <div class="heart-container" id="main-hearts"></div>

    <div id="home-view">
        <h1>Something for Chinuu <span class="beating-heart">‚ù§</span></h1>
        <div class="grid" id="card-grid"></div>
    </div>

    <div id="detail-view">
        <div class="heart-container" id="detail-hearts"></div>
        <button class="back-btn" onclick="closePage()">GO BACK</button>
        <div class="content-box" id="detail-content"></div>
    </div>

    <script>
        const heartPath = "M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z";

        function createHearts(containerId, count) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            for (let i = 0; i < count; i++) {
                const svg = document.createElementNS("http://www.w3.org/2000/svg", "svg");
                const path = document.createElementNS("http://www.w3.org/2000/svg", "path");
                
                // Increased heart size (40px to 80px)
                const size = Math.random() * 40 + 40;
                
                path.setAttribute("d", heartPath);
                path.setAttribute("class", "floating-heart");
                
                svg.setAttribute("viewBox", "0 0 24 24");
                svg.setAttribute("width", size);
                svg.setAttribute("height", size);
                svg.style.position = "absolute";
                
                // Spread across the viewport
                svg.style.left = Math.random() * 85 + 5 + "%";
                svg.style.top = Math.random() * 85 + 5 + "%";
                svg.style.transform = `rotate(${Math.random() * 40 - 20}deg)`;
                
                svg.appendChild(path);
                container.appendChild(svg);
            }
        }

        // Home page gets exactly 6 hearts
        createHearts('main-hearts', 6);

        const days = [
            { id: 1, date: 7, name: "Rose Day" },
            { id: 2, date: 8, name: "Propose Day" },
            { id: 3, date: 9, name: "Chocolate Day" },
            { id: 4, date: 10, name: "Teddy Day" },
            { id: 5, date: 11, name: "Promise Day" },
            { id: 6, date: 12, name: "Hug Day" },
            { id: 7, date: 13, name: "Kiss Day" },
            { id: 8, date: 14, name: "Valentine's Day" }
        ];

        function isUnlocked(dayDate) {
            const now = new Date();
            const target = new Date(2026, 1, dayDate); 
            return now >= target;
        }

        function openPage(index) {
            const day = days[index];
            document.getElementById('home-view').style.opacity = '0';
            
            // Generate hearts equal to the day's date
            createHearts('detail-hearts', day.date);

            setTimeout(() => {
                document.getElementById('detail-view').style.display = 'flex';
                const content = document.getElementById('detail-content');
                if (isUnlocked(day.date)) {
                    content.innerHTML = `
                        <div class="date-label">FEBRUARY ${day.date}</div>
                        <h2 class="day-name">${day.name}</h2>
                        <audio controls autoplay><source src="${day.id}.mp3" type="audio/mpeg"></audio>
                    `;
                } else {
                    content.innerHTML = `
                        <div class="date-label">FEBRUARY ${day.date}</div>
                        <h2 class="day-name" style="color:var(--secondary)">${day.name}</h2>
                        <div class="countdown" id="timer"></div>
                    `;
                    startCountdown(day.date);
                }
            }, 300);
        }

        function closePage() {
            document.getElementById('detail-view').style.display = 'none';
            document.getElementById('home-view').style.opacity = '1';
        }

        function startCountdown(dayDate) {
            const target = new Date(2026, 1, dayDate).getTime();
            const x = setInterval(() => {
                const now = new Date().getTime();
                const diff = target - now;
                if (diff < 0) { clearInterval(x); location.reload(); return; }
                const h = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const m = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const s = Math.floor((diff % (1000 * 60)) / 1000);
                const el = document.getElementById('timer');
                if(el) el.innerHTML = `${h}:${m < 10 ? '0'+m : m}:${s < 10 ? '0'+s : s}`;
            }, 1000);
        }

        days.forEach((day, i) => {
            const div = document.createElement('div');
            const unlocked = isUnlocked(day.date);
            div.className = `card ${unlocked ? '' : 'locked'}`;
            div.innerHTML = `<div class="date-label">Feb ${day.date}</div><div class="day-name">${day.name}</div>`;
            div.onclick = () => openPage(i);
            document.getElementById('card-grid').appendChild(div);
        });
    </script>
</body>
</html>
